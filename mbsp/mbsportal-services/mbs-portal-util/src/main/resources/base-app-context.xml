	<!-- <bean id="springApplicationContext" -->
	<!-- class="com.fanniemae.securitiesods.ods_core.common.SpringApplicationContext" 
		/> -->

	<bean id="esbClient" class="com.fanniemae.all.messaging.api.ESBClientFactory"
		factory-method="createESBClient">
		<constructor-arg index="0">
			<ref bean="esbClientCredentialsImpl" />
		</constructor-arg>
	</bean>

	<bean id="esbClientCredentialsImpl"
		class="com.fanniemae.mbsportal.utils.ESBClientCredentialsImpl">
		<property name="ESBUserId" value="bpydevl" />
		<property name="ESBPassword">
			<bean
				class="org.springframework.beans.factory.config.PropertyPathFactoryBean"
				scope="prototype">
				<property name="targetObject" ref="vaultContentBean" />
				<property name="propertyPath" value="content" />
			</bean>
		</property>
	</bean>
	
	<bean id="appPasswordBean"
		class="com.fanniemae.mbsportal.utils.MBSPasswordBean">
		<property name="appPassword">
			<bean
				class="org.springframework.beans.factory.config.PropertyPathFactoryBean"
				scope="prototype">
				<property name="targetObject" ref="vaultContentBean" />
				<property name="propertyPath" value="content" />
			</bean>
		</property>
	</bean> 
	

	<bean id="vaultContentBean" class="com.fanniemae.sharedservices.spring.VaultContentBean"
		scope="prototype">
		<constructor-arg value="${mbsp.epv.ref.id}" />
	</bean>

</beans>
